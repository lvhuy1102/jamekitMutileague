<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null">

    <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/newsCardItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_item"
        android:layout_marginLeft="@dimen/margin_layout"
        android:layout_marginRight="@dimen/margin_layout"
        android:layout_marginTop="@dimen/margin_item"
        android:background="@color/white"
        android:orientation="vertical"
        app:cardElevation="4dp"
        app:cardPreventCornerOverlap="false"
        card_view:cardCornerRadius="@dimen/span4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/span6">

            <com.joooonho.SelectableRoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/img_news"
                android:layout_width="match_parent"
                android:layout_height="@dimen/span200"
                android:scaleType="fitXY"
                app:sriv_left_bottom_corner_radius="0dp"
                app:sriv_left_top_corner_radius="0dp"
                app:sriv_right_bottom_corner_radius="0dp"
                app:sriv_right_top_corner_radius="0dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <mobi.letsplay.livescore.widget.textview.TextViewRobotoRegular
                    android:id="@+id/lbl_news_title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/span8"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="Title"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/font_size_16" />
                <mobi.letsplay.livescore.widget.textview.TextViewRobotoRegular
                    android:id="@+id/lbl_description"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/span16"
                    android:layout_marginRight="@dimen/span16"
                    android:layout_marginTop="@dimen/span5"
                    android:text="Des"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="@dimen/font_size_caption"
                    android:visibility="gone" />

                <mobi.letsplay.livescore.widget.textview.TextViewRobotoRegular
                    android:id="@+id/lbl_news_time"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/span8"
                    android:layout_marginTop="@dimen/span5"
                    android:gravity="right"
                    android:text="22/12"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="@dimen/span12" />




            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>